# Copy to .env and set your keys.
# Production: Uses backend proxy (no keys needed). Set API_BASE_URL to override.
# API_BASE_URL=https://us-central1-alphaviewai-d7f9d.cloudfunctions.net

# Azure Foundry Configuration (for AI chat)
# Get these from Azure Foundry Portal: https://portal.azure.com -> Your Foundry Project -> Overview
AZURE_FOUNDRY_API_KEY=                    # Foundry API Key from project overview
AZURE_FOUNDRY_RESOURCE_NAME=              # Your resource name (e.g., "alphaviewgpt4mini")
AZURE_FOUNDRY_PROJECT_NAME=proj-default   # Your project name (default: proj-default)
AZURE_FOUNDRY_MODEL=gpt-4o-mini           # Default model: gpt-4o-mini, gpt-4.1, gpt-4.1-mini, or gpt-5-mini
AZURE_FOUNDRY_API_VERSION=2024-05-01-preview  # REST API version for Foundry chat completions

# Legacy Azure OpenAI (for backward compatibility - will be ignored if Foundry config exists)
AZURE_OPENAI_API_KEY=
AZURE_OPENAI_ENDPOINT=https://your-resource.openai.azure.com
AZURE_OPENAI_DEPLOYMENT=gpt-4o-mini

# Dev fallback - Azure Speech (for mic transcription)
AZURE_SPEECH_KEY=
AZURE_SPEECH_REGION=eastus
